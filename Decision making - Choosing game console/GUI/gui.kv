#: import WipeTransition kivy.uix.screenmanager.WipeTransition

WindowManager:
    transition: WipeTransition()
    WelcomeScreen:
    MainScreen:
    SettingsScreen:

<grid_layout_generic@GridLayout>
    pos_hint:{"x":0.3,"y":0.4}
    size_hint:(0.4,0.15)
    cols:1

<grid_layout_settings@GridLayout>
    pos_hint:{"x":0.895, "y":0.885}
    size_hint:(0.1, 0.1)
    cols:1

<grid_layout_fullscreen@GridLayout>
    pos_hint:{"x":0.005, "y":0.885}
    size_hint:(0.1, 0.1)
    cols:1

<grid_layout_return@GridLayout>
    pos_hint:{"x":0.005, "y":0.075}
    size_hint:(0.1, 0.1)
    cols:1

<grid_layout_skip@GridLayout>
    pos_hint:{"x":0.895, "y":0.095}
    size_hint:(0.1, 0.1)
    cols:1

<WelcomeScreen>
    name: "welcome_screen"

    FloatLayout:
        size: root.width, root.height
        canvas.before:
            Color:
                rgba: (0.2,0.37,0.47,1)
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            pos_hint:{"x":0,"y":0.2}
            font_size:35
            color: 1,1,1
            text:"Którą konsolę kupić? Quiz? \nQuestionnaire? Wtf is this"

        Label:
            pos_hint:{"x":0.4,"y":0.83}
            size_hint:(0.2,0.15)
            font_size:35
            color: 1,1,1
            text:"Sugestator 3000"

        grid_layout_generic:
            Button:
                background_color: (0.47,0.3,0.2,1)
                color: (1,1,1,1)
                text:"Idk bro"
                on_press:
                    app.root.current = "main_screen"
#                    root.manager.transition.direction = "left"

        grid_layout_settings:
            Button:
                size_hint_y: None
                height: self.width
                border: (0,0,0,0)
                background_color: (0.47,0.3,0.2,1)
                color: (1,1,1,1)
                background_normal: root.manager.settings_icon_link
                background_down: root.manager.settings_icon_link
                on_press:
                    root.manager.last_screen = "welcome_screen"
                    app.root.current = "settings_screen"
#                    root.manager.transition.direction = "down"

        grid_layout_fullscreen:
            Button:
                id: screen_mode_button
                size_hint_y: None
                height: self.width
                border: (0,0,0,0)
                background_color: (0.47,0.3,0.2,1)
                color: (1,1,1,1)
                background_normal: root.manager.screen_mode_change_image_link
                background_down: root.manager.screen_mode_change_image_link
                on_press:
                    root.manager.screen_mode_change()

