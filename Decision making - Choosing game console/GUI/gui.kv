                text:"Sugestator 3000"
            Label:
#                pos_hint:{"y":0.6}
                text_size: self.size
                halign: 'center'
                valign: 'bottom'
                font_size:25
    #            color: 1,1,1
                color: 0.2,0.37,0.47,1
                text:"Analytic Hierarchy Process implementation"

